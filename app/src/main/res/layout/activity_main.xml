<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:androidx.appcompat.widget.AppCompatButton="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main">

        <ImageView
            android:id="@+id/bgSpeaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/speaker"
            android:button="@drawable/btn_checkbox" />

        <ImageView
            android:id="@+id/Title"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/quiz_logo"
            android:textColor="#0033FF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Start"
            android:textColor="#110000"
            android:textSize="20sp"
            android:textStyle="bold"
            androidx.appcompat.widget.AppCompatButton:backgroundTint="#00CC00" />

        <Spinner
            android:id="@+id/spinerNoQuestion"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/BtnStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:spinnerMode="dropdown"
            android:background="#FFFF00"
            android:text="QUESTION"
            android:gravity="center"
            android:textColor="#110000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:visibility="visible" />

        <Button
            android:id="@+id/BtnScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinerNoQuestion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="High Score"
            android:textColor="#110000"
            android:textSize="20sp"
            android:textStyle="bold"
            androidx.appcompat.widget.AppCompatButton:backgroundTint="#FF9900" />

        <Button
            android:id="@+id/BtnHowToPlay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="How To Play"
            android:textColor="#110000"
            android:textSize="20sp"
            android:textStyle="bold"
            androidx.appcompat.widget.AppCompatButton:backgroundTint="#00FFFF" />

        <Button
            android:id="@+id/BtnExit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BtnHowToPlay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Exit"
            android:textColor="#110000"
            android:textSize="20sp"
            android:textStyle="bold"
            androidx.appcompat.widget.AppCompatButton:backgroundTint="#FF0000" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>